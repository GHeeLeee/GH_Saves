<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailedScreenActivity">

    <Button
        android:id="@+id/back_btn"
        style="@style/NoShadow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/backbtn"
        android:text=""
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="409"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="예매 영화 상세 정보"
        android:textColor="#000000"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="10dp" />

    <View
        android:id="@+id/detailedview"
        android:layout_width="310dp"
        android:layout_height="420dp"
        android:background="#D9D9D9"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="69dp" />

    <TextView
        android:id="@+id/movieText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/Changebtn"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:text="좌석변경"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="574dp"
        android:background="@drawable/button_patter_gray" />

    <Button
        android:id="@+id/Cancelbtn"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:text="예매 취소"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="635dp"
        android:background="@drawable/button_patter_rad" />


</androidx.constraintlayout.widget.ConstraintLayout>