<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyInformationActivity">


    <Button
        android:id="@+id/movie_btn"
        android:layout_width="136"
        android:layout_height="100dp"
        android:drawableTop="@drawable/Movie"
        android:gravity="bottom|center_horizontal"
        android:text=""
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="641dp" />

    <Button
        android:id="@+id/home_btn"
        android:layout_width="136"
        android:layout_height="100"
        android:drawableTop="@drawable/Home"
        android:gravity="bottom|center_horizontal"
        android:text=""
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="641dp" />

    <Button
        android:id="@+id/my_btn"
        android:layout_width="136"
        android:layout_height="100"
        android:drawableTop="@drawable/My"
        android:gravity="bottom|center_horizontal"
        android:text=""
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="641dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="409"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="내정보"
        android:textColor="#000000"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="10dp" />


    <ImageView
        android:id="@+id/profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_heigth="150dp"
        android:background="#FFFFFF"
        android:src="@drawable/Profile"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="180"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="게스트"
        android:textColor="#000000"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님"
        android:textColor="#000000"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="109dp" />

    <View
        android:id="@+id/informationLine"
        android:layout_width="390"
        android:layout_height="3dp"
        android:background="#A8A4A4"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="218dp" />

    <View
        android:id="@+id/movieLine"
        android:layout_width="390"
        android:layout_height="3dp"
        android:background="#A8A4A4"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="313dp" />

    <TextView
        android:id="@+id/movietext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예메한 영화"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/informationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연동 정보"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="251dp" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="256dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="376dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="98dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="251dp" />

</androidx.constraintlayout.widget.ConstraintLayout>